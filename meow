        SDL_Rect buttonRect = { offsetX, offsetY, buttonWidth, buttonHeight };

        // Desenează fundalul butonului
        SDL_SetRenderDrawColor(renderer, col[1].r, col[1].g, col[1].b, col[1].a); // Gri deschis
