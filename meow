        SDL_Rect topButton = { buttonTopX, buttonTopY, buttonTopWidth, buttonTopHeight };

        // Verificăm dacă mouse-ul este peste buton
        if (inButton(topButton.x, topButton.y, topButton.w, topButton.h)) {
